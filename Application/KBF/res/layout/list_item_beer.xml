<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height" >

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_gray" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/list_item_content_margin"
        android:layout_toLeftOf="@+id/linearLayoutUserContent"
        android:layout_toRightOf="@+id/imageViewLogo"
        android:maxLines="1"
        android:text="@string/placeHolder"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/list_item_content_margin"
        android:layout_toRightOf="@+id/imageViewLogo"
        android:layout_toLeftOf="@+id/linearLayoutBeerContent"
        android:maxLines="1"
        android:text="@string/placeHolder"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:id="@+id/linearLayoutUserContent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_height_half"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageViewRecommended"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_marginBottom="@dimen/image_button_margin"
            android:layout_marginRight="@dimen/image_button_margin"
            android:layout_marginTop="@dimen/image_button_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/recommended" />

        <ImageView
            android:id="@+id/imageViewCheck"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_marginBottom="@dimen/image_button_margin"
            android:layout_marginRight="@dimen/image_button_margin"
            android:layout_marginTop="@dimen/image_button_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/check" />

        <ImageView
            android:id="@+id/imageViewWhishlist"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_marginBottom="@dimen/image_button_margin"
            android:layout_marginRight="@dimen/image_button_margin"
            android:layout_marginTop="@dimen/image_button_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/whishlist" />

        <ImageView
            android:id="@+id/imageViewFavorite"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_marginBottom="@dimen/image_button_margin"
            android:layout_marginRight="@dimen/image_button_margin"
            android:layout_marginTop="@dimen/image_button_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/favorite" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBeerContent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_height_half"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageViewAward"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_marginBottom="@dimen/image_button_margin"
            android:layout_marginRight="@dimen/image_button_margin"
            android:layout_marginTop="@dimen/image_button_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/award" />

        <ImageView
            android:id="@+id/imageViewNew"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_marginBottom="@dimen/image_button_margin"
            android:layout_marginRight="@dimen/image_button_margin"
            android:layout_marginTop="@dimen/image_button_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/tag" />

        <ImageView
            android:id="@+id/imageViewStock"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_marginBottom="@dimen/image_button_margin"
            android:layout_marginRight="@dimen/image_button_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/warn" />

        <ImageView
            android:id="@+id/imageViewPrice"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_marginBottom="@dimen/image_button_margin"
            android:layout_marginRight="@dimen/image_button_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/one" />
    </LinearLayout>

</RelativeLayout>